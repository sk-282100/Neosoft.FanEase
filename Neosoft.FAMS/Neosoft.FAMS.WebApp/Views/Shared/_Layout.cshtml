@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - FanEase_Portal</title>
    <!---<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body style="background-color: #F5F5F5;">

    <div id="head">
        <nav class="navbar navbar-expand-lg navbar-light " id="nav">
            <a class="navbar-brand" style="background-color: #56baed;">FanEase</a>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                @if (@Context.Session.GetString("Username") != null && @Context.Session.GetString("Username") == "admin@gmail.com")
                {
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index" style="color:white;">Dashboard</a>
                        </li>
                    </ul>
                    <div style="margin-left:auto;margin-right:5px;">
                        <span>Username: @Context.Session.GetString("Username")</span>&emsp;&emsp;
                        <a asp-controller="Login" asp-action="Logout" style="background-color:red;color:white;padding:3px;">Logout</a>
                    </div>
                }
                else if (@Context.Session.GetString("Username") != null && @Context.Session.GetString("Username") == "creator@gmail.com")
                {
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Creator" asp-action="Index" style="color:white;">About Us</a>
                        </li>
                    </ul>
                    <div style="margin-left:auto;margin-right:5px;">
                        <span>Username: @Context.Session.GetString("Username")</span>&emsp;&emsp;
                        <a asp-controller="Login" asp-action="Logout" style="background-color:red;color:white;padding:3px;">Logout</a>
                    </div>
                }
                else
                {
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Login" asp-action="Home" style="color:white;">Home</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Login" asp-action="Home" style="color:white;">About Us</a>
                        </li>
                    </ul>
                }
                @if (@Context.Session.GetString("Username") == null)
                {
                    <form class="form-inline" action="~/Viewer/ViewerRegisteration">
                        <input type="submit" class="" value="Sign In">
                    </form>
                    <form class="form-inline" action="~/Login/Index">
                        <input type="submit" class="" value="Log In">
                    </form>
                }
            </div>

        </nav>
    </div>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div id="foot">
        <footer class="bg-light text-center text-lg-start">

            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2020 Copyright:
                <a class="text-dark" href="www.fanease.com">fanease.com</a>
            </div>

        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
