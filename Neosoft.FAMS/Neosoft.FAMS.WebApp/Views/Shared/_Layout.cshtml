@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - FanEase_Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/StepBar.css" />
    <style>
        .btnLoginSignIn {
            color: cornflowerblue;
            height: 80px;
        }
        .mylink {
            border: none;
            outline: none;
            padding: 10px 16px;
            background-color: #ffffff;
            cursor: pointer;
        }

            .myactive, .mylink:hover {
                background-color: #6b6963;
                color: white;
            }
        .menu-btn {
            color: white;
            font-weight: bolder;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            border: none;
            float: left;
            background-color: white;
            overflow: hidden;
        }
        .dropdown-menu {
            position: relative;
            display: inline-block;
            border-style: none;
            float: left;
        }
        .menu-content {
            display: none;
            float: left;
            overflow: hidden;
            position: absolute;
            width: 80px;
            border-radius: 5px;
            color: #ffffff;
            background-color: #52BAF1;
            z-index: 1;
        }
        .links,.links-hidden{
            display: inline-block;
            color: rgb(255, 255, 255);
            padding: 5px 5px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
        }
        .links-hidden{
            display: block;
        }
        .dropdown-menu:hover .menu-content {
            display: block;
        }
    </style>
</head>
<body style="background-color: #F5F5F5;">

    <div id="head">
        <nav class="navbar navbar-expand-lg navbar-light " id="nav">
            <a id="logoText" class="navbar-brand">Fan<span id="logonext">Ease</span></a>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                @if (@Context.Session.GetString("Username") != null && @Context.Session.GetString("RoleId") == "1")
                {
                    <div style="margin-left:auto;margin-right:5px;">
                        <span>Username: @Context.Session.GetString("Username")</span>&emsp;&emsp;
                        <a asp-controller="Login" asp-action="Logout" style="color: black; padding: 5px; border-radius: 10px; background-color: #52BAF1 "><i class="fa fa-sign-out" style="color: #ffffff "></i>Log out</a>
                    </div>
                }
                else if (@Context.Session.GetString("Username") != null && @Context.Session.GetString("RoleId") == "2")
                {
                    
            <div style="margin-left:auto;margin-right:5px;">
                
                <div class="dropdown-menu">
                    Username: @Context.Session.GetString("Username")&emsp;&emsp;
                    <button class="menu-btn"><i class="fa fa-caret-down" style="color: gray "></i></button>
                    <div class="menu-content">
                        <a class="links-hidden" href="~/Creator/EditCreatorProfile/@Context.Session.GetString("ContentCreatorId")">Profile</a>
                    </div>
                </div>
                <a asp-controller="Login" asp-action="Logout" style="color: black; padding: 5px; border-radius: 10px; background-color: #52BAF1 "><i class="fa fa-sign-out" style="color: #ffffff "></i>Log out</a>
            </div>
                }
                else
                {
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Login" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Login" asp-action="Home">About Us</a>
                        </li>
                    </ul>
                }
                @if (@Context.Session.GetString("Username") == null)
                {
                    <form class="form-inline " action="~/Viewer/ViewerRegisteration">
                        <input type="submit" class="text-capitalize" style="background-color: whitesmoke; color: dodgerblue; box-shadow: gray 0.2em 0.2em 0.2em;" value="Sign Up">
                    </form>
                    <form class="form-inline " action="~/Login/Index">
                        <input type="submit" class="text-capitalize" style="background-color: whitesmoke; color: dodgerblue; box-shadow: gray 0.2em 0.2em 0.2em;" value="Log In">
                    </form>
                }
            </div>

        </nav>
    </div>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div id="foot">
        <footer class="bg-light text-center text-lg-start">

            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2020 Copyright:
                <a class="text-dark" href="www.fanease.com">fanease.com</a>
            </div>

        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
   

    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
