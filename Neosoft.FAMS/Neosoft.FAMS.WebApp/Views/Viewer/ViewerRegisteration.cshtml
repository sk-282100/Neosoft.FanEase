@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isInserted = Convert.ToBoolean(ViewData["isInsert"]);
}

<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/temp.css" />
    <link rel="stylesheet" href="~/css/CreatorRegisteration.css" />

</head>
<div class="wrapper">
    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> Sign In </h2>
        @if (@isInserted)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Data Inserted!</strong> Added Successfully
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <!-- Login Form -->
        @using (Html.BeginForm("ViewerRegisteration", "Viewer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label id="lbl" class="form-group required">First Name</label>
                    <input type="text" class="fadeIn second" name="FirstName" placeholder="First Name">
                    <label id="lbl">Last Name</label>
                    <input type="text" class="fadeIn third" name="LastName" placeholder="Last Name">
                    <label id="lbl">Address2</label>
                    <input type="text" class="fadeIn second" name="Address2" placeholder="Address2">
                    <label id="lbl">Country</label>
                    <select id="formCity" name="CountryId">Country</select>
                    <label id="lbl">Email</label>
                    <input type="text" class="fadeIn first" name="EmailId" placeholder="Enter Email ID">
                </div>
                <div class="form-group col-md-6">
                    <label id="lbl">Middle Name</label>
                    <input type="text" class="fadeIn first" name="MiddleName" placeholder="Middle Name">
                    <label id="lbl">Address1</label>
                    <input type="text" class="fadeIn second" name="Address1" placeholder="Address1">
                    <label id="lbl">Contact</label>
                    <input type="text" class="fadeIn second" name="MobileNumber" placeholder="Enter mobile number"><br />
                    <label id="lbl">City</label>
                    <select id="formCity" name="CityId">City</select>
                    <label id="lbl">Password</label>
                    <input type="password" class="fadeIn first" name="Password" placeholder="Enter password">
                </div>
            </div>
            <input type="submit" id="btnCancel" class="fadeIn fourth" value="Cancel">
            <input type="submit" class="fadeIn fourth" value="Save">
        }


    </div>
</div>
