@model ViewerRegisteration;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isInserted = Convert.ToBoolean(ViewData["isInsert"]);
}

<head>
    <link rel="stylesheet" href="~/css/temp.css" />
    <link rel="stylesheet" href="~/css/CreatorRegisteration.css" />
    <script src="~/js/ContentCreator.js"></script>
    <style>
        label span {
            font-size: 12px;
        }
        .help-block ul {
            list-style-type: none;
        }
    </style>
</head>
<div class="wrapper">
    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> Sign Up </h2>
        <div asp-validation-summary="All" class="text text-danger help-block"></div>
        @if (@isInserted)
        {
            <div class="alert alert-success alert-dismissible fade show hideAfter3Sec" role="alert">
                <strong>Viewer Registered Successfully</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <!-- Login Form -->
        @using (Html.BeginForm("ViewerRegisteration", "Viewer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label id="lbl" class="form-group required">
                        First Name<sup style="color:red">*</sup>
                        @Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })
                    </label>
                    <input asp-for="FirstName" type="text" class="fadeIn second" name="FirstName" placeholder="First Name">

                    <label id="lbl">
                        Last Name<sup style="color:red">*</sup>
                        @Html.ValidationMessage("LastName", "", new { @class = "text-danger" })
                    </label>
                    <input asp-for="LastName" type="text" class="fadeIn third" name="LastName" placeholder="Last Name">

                    <label id="lbl">
                        Address1<sup style="color:red">*</sup>
                        @Html.ValidationMessage("Address1", "", new { @class = "text-danger" })
                    </label>
                    <textarea asp-for="Address1" type="text" class="fadeIn second" name="Address1" placeholder="Address1"></textarea>

                    <label id="lbl">
                        Country<sup style="color: red">*</sup>
                        @Html.ValidationMessage("CountryId", "", new { @class = "text-danger" })
                    </label>
                    <select id="formCountry" asp-for="CountryId" style="margin:10px 10px 0px 35px" class="js-example-basic-single" name="CountryId">
                        <option value="0">Please Select Country</option>    
                    </select>

                    <label id="lbl">
                        City<sup style="color: red">*</sup>
                        @Html.ValidationMessage("CityId", "", new { @class = "text-danger" })
                    </label>
                    <select id="formCity" asp-for="CityId" style="margin: 10px 10px 0px 35px" name="CityId">
                        <option value="0">Please Select City</option>
                    </select>
                    
                    <label id="lbl">
                        Password<sup style="color:red">*</sup>
                        @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                    </label>
                    <input asp-for="Password" type="password" class="fadeIn first" name="Password" placeholder="Enter password">


                </div>
                <div class="form-group col-md-6">
                    <label id="lbl">
                        Middle Name<sup style="color:red">*</sup>
                        @Html.ValidationMessage("MiddleName", "", new { @class = "text-danger" })
                    </label>
                    <input asp-for="MiddleName" type="text" class="fadeIn first" name="MiddleName" placeholder="Middle Name">

                    <label id="lbl">
                        Contact<sup style="color:red">*</sup>
                        @Html.ValidationMessage("MobileNumber", "", new { @class = "text-danger" })
                    </label>
                    <input asp-for="MobileNumber" type="text" class="fadeIn second" name="MobileNumber" placeholder="Enter mobile number"><br />

                    <label id="lbl">
                        Address2<sup style="color:red">*</sup>
                        @Html.ValidationMessage("Address2", "", new { @class = "text-danger" })
                    </label>
                    <textarea asp-for="Address2" type="text" class="fadeIn second" name="Address2" placeholder="Address2"></textarea>


                    <label id="lbl">
                        State<sup style="color: red">*</sup>
                        @Html.ValidationMessage("StateId", "", new { @class = "text-danger" })
                    </label>
                    <select id="formState" asp-for="StateId" style="margin: 10px 10px 0px 35px" name="StateId">
                        <option value="0">Please Select State</option>
                    </select>

                    <label id="lbl">
                        Email<sup style="color:red">*</sup>
                        <span id="emailSpan" class="text-danger"></span>
                        @Html.ValidationMessage("EmailId", "", new { @class = "text-danger " })
                    </label>
                    <input id="viewerEmailId" asp-for="EmailId" type="text" class="fadeIn first" name="EmailId" placeholder="Enter Email ID">

                </div>
            </div>
            <input type="button" id="btnCancel" onclick="window.location= '@Url.Action( "Index", "Login")'" class="fadeIn fourth" value="Cancel">
            <input type="submit" class="fadeIn fourth" value="Save">
        }


    </div>
</div>
@section Scripts{
    <script src="~/js/ViewerEmailCheck.js"></script>
}
