@using Neosoft.FAMS.Application.Features.Template.Queries
@using Neosoft.FAMS.WebApp.Services;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Template List";
    var records = (List<TemplateListDto>)ViewData["data"];
    bool isDeleted = Convert.ToBoolean(ViewData["isDelete"]);

}

<head>
    <link rel="stylesheet" href="~/css/temp.css" />
    <link href="~/css/Admin/CreatorList.css" rel="stylesheet" />
    <link href="~/css/datatablestyle.css" rel="stylesheet" />

    <style>
        #deleteTag:hover {
            color: #56baed;
            cursor: pointer;
        }
    </style>
</head>

<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        @Html.Partial("_SideBar")
        <div class="col pt-2">

            <h3>Template List</h3>
            <div class="row header" style="float: right;">
                <button type="button" class="btn add-new btnAddNewCreator" onclick="window.location = '@Url.Action("AddTemplate", "Template")'"><i class="fa fa-plus"></i> Add New Template </button>
            </div>
            <div id="tbl">
                @if (@isDeleted)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Template Deleted Successfully</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <table id="myTable" class="table table-sm table-hover">
                    <thead>
                        <tr class="heading">
                            <th>Template ID</th>
                            <th>Template Name</th>
                            <th>Publish Status</th>
                            <th class="nosort">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in records)
                        {
                            <tr>
                                    <td>@record.TemplateId</td>
                                    <td><a href="~/Template/TemplateDetail/@record.TemplateId">@record.TemplateName</a></td>
                                @if (record.PublishStatus == true)
                                    {
                                        <td style="color: limegreen">Live</td>
                                    }
                                    else
                                    {
                                        <td style="color: red">Draft</td>
                                    }
                                    <td>
                                        <a class="edit" href="EditCreator/@record.TemplateId.ToString()" title="Edit" data-toggle="tooltip"><i class="material-icons" style="color: green"></i></a>
                                        <a id="deleteTag" class="delete" onClick="deleteCreator('DeleteCreator/@record.TemplateId.ToString()')" data-toggle="modal" data-target="#exampleModalCenter" title="Delete" data-toggle="tooltip"><i class="material-icons" style="color: red"></i></a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
                @* Popup Modal *@
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body" style="height: 60px;">
                                Are you sure you want to Delete this record?
                            </div>
                            <div class="modal-footer">
                                <a href="CreatorsList" class="btn btn-secondary">No</a>
                                <a id="hrefElement" class="btn btn-primary">Yes</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    function deleteCreator(hrefLink) {
        console.log(hrefLink);
        var element = document.getElementById("hrefElement");
        console.log(element);
        element.href = hrefLink.toLocaleString();
    }
</script>
