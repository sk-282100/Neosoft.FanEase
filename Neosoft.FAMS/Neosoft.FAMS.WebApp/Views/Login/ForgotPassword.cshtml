@model Login;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/temp2.css" />
    <link rel="stylesheet" href="~/css/ResetPassword.css" />
    <script>
        var check = function () {
            if (document.getElementById('password').value ==
                document.getElementById('confirm_password').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'Password and Confirm password is matching';
            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'Password and Confirm password is not matching';
            }
        }
    </script>
    <style>
        label span {
            font-size: 12px;
        }
    </style>
</head>
<div class="wrapper">
    <div id="formContent">
        <!-- Tabs Titles -->
        <h2 class="active"> Reset Password </h2>


        <!-- Login Form -->
        @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
        {
            <label id="lbl" class="form-group required">
                New Password<sup style="color:red">*</sup>
                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
            </label>
            <input asp-for="Password" type="password" class="fadeIn third" name="Password" id="password" onkeyup='check();' placeholder="New password">

            <label id="lbl" class="form-group required">
                Re-Password<sup style="color:red">*</sup>
                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
            </label>
            <input asp-for="Password" type="password" class="fadeIn fourth" name="Password" id="confirm_password" onkeyup='check();' placeholder="Confirm password">
            <div><span id='message'></span></div>

            <input type="submit" class="fadeIn fifth" value="Reset">
        }

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

