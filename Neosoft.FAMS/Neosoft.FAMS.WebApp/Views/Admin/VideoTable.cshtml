@using Neosoft.FAMS.Application.Features.Video.Queries.GetAll;
@{
    ViewData["Title"] = "VideoList";
    var records = (List<VideoGetAllDto>)ViewData["data"];
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/temp.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/AddVideo.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        table,
        thead,
        tr,
        tbody,
        th,
        td {
            text-align: center;
        }

        .table td {
            text-align: center;
        }
    </style>
</head>
<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav flex-column flex-nowrap overflow-hidden">

                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Admin/Index" id="sidetext" style="color:white"><i class="fa fa-home" style="color:white"></i>  Dashboard</a>

                </li>
                <li class="nav-item" style="background-color: #F5F5F5; width: 400px;">

                    <a class="nav-link text-truncate" id="sidetext" href="~/Admin/CreatorsList" style="background-color: #F5F5F5;width:400px;color:black;"> <i class="bi bi-person-fill"></i>   <span class="d-none d-sm-inline" id="sidetext" style="color: black;"> Content Creators</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Admin/ViewerList" id="sidetext" style="color:white"><i class="bi bi-person-fill" style="color:white"></i>  Viewers</a>

                </li>
            </ul>
        </div>
        <div class="col pt-2">
            <a href="~/Admin/CreatorsList"> < Back to Content Creators</a>
            <br /><br />
            <div class="row header">
                <h3 style="text-align: left; margin-left: 15px; color: #56baed;">John Abraham Videos</h3>
            </div>
            <div style="margin-top:20px;">
                <table id="myTable" class="table table-bordered table-sm table-hover">
                    <thead style="background-color: #56baed;color:white;">
                        <tr>
                            <th>Video ID</th>
                            <th class="no-sort">Thumbnail Image</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Video Title</th>
                            <th class="no-sort">Video Type</th>
                            <th>Player Type</th>
                            <th>Video URL</th>
                            <th>Upload Video Path</th>
                            <th>Video Category</th>
                            <th class="no-sort">Created By</th>
                            <th class="no-sort">Created On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in records)
                        {
                            <tr>
                                <td>@record.VideoId</td>
                                <td>@record.VideoImage.ToString()</td>
                                <td>@record.StartDate.ToString()</td>
                                <td>@record.EndDate.ToString()</td>
                                <td>@record.Title</td>
                                <td>@record.VideoTypeId</td>
                                <td>@record.PlayerTypeId</td>
                                <td>@record.VideoUrl</td>
                                <td>@record.UploadVideoPath</td>
                                <td>@record.VideoCategoryId</td>
                                <td>@record.CreatedBy</td>
                                <td>@record.CreatedOn</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <script>
                $(document).ready(function () {
                    $('#myTable').dataTable({
                        "columnDefs": [{ targets: 'no-sort', orderable: false }]
                    });
                    console.log(1);
                });
            </script>
        </div>
    </div>
</div>
