@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isInserted = Convert.ToBoolean(ViewData["isInsert"]);
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/temp.css" />
    <link rel="stylesheet" href="~/css/CreatorRegisteration.css" />
</head>
<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav flex-column flex-nowrap overflow-hidden">

                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Admin/Index" id="sidetext" style="color:white"><i class="fa fa-home" style="color:white"></i>  Dashboard</a>

                </li>
                <li class="nav-item" style="background-color: #F5F5F5; width: 400px;">

                    <a class="nav-link text-truncate" id="sidetext" href="~/Admin/CreatorsList" style="background-color: #F5F5F5;width:400px;color:black;"> <i class="bi bi-person-fill"></i>   <span class="d-none d-sm-inline" id="sidetext" style="color: black;"> Content Creators</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Admin/ViewerList" id="sidetext" style="color:white"><i class="bi bi-person-fill" style="color:white"></i>  Viewers</a>

                </li>
            </ul>
        </div>
        <div class="col pt-2">
        <div class="wrapper">
            <div id="formContent">
                <!-- Tabs Titles -->
                <h2 class="active"> ADD Creator </h2>
                @if(@isInserted)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Data Inserted!</strong> New Content Creator Added Successfully
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <!-- Login Form -->
                @using (Html.BeginForm("CreatorRegisteration", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-row">
                        <label id="lbl" for="formFileMultiple" class="form-label">Add Profile Image</label>
                        <input class="form-control" type="file" id="formFileMultiple" multiple />

                        <div class="form-group col-md-6">
                            <label id="lbl" class="form-group required">Name</label>
                            <input type="text" class="fadeIn second" name="CreatorName" placeholder="Enter Name">

                            <label id="lbl">Address1</label>
                            <input type="text" class="fadeIn third" name="Address1" placeholder="Address1">

                            <label id="lbl">Country</label>
                            <select id="formCity" name="CountryId">Country</select>

                            <label id="lbl">Mobile Number</label>
                            <input type="text" class="fadeIn second" name="MobileNumber" placeholder="Enter mobile number">

                            <label id="lbl">
                                Status &nbsp;&nbsp;&nbsp;
                                <input name="Status" type="radio" value=1 />Active &nbsp;&nbsp;&nbsp;
                                <input name="Status" type="radio" value=2 />Deactive
                            </label>
                        </div>
                        <div class="form-group col-md-6">
                            <label id="lbl">Email</label>
                            <input type="text" class="fadeIn first" name="EmailId" placeholder="Enter Email ID">

                            <label id="lbl">Address2</label>
                            <input type="text" class="fadeIn second" name="Address2" placeholder="Address2"><br />

                            <label id="lbl">City</label>

                            <select id="formCity" name="CityId">City</select>
                            <div style="float:left">
                                <label id="lbl">Additional remark</label>
                                <textarea type="text" class="fadeIn third" rows="4" name="AdditionalRemark" placeholder="Additional remark"></textarea>
                            </div>
                            <br /><br />
                        </div>
                    </div>
                    <input type="submit" id="btnCancel" class="fadeIn fourth" value="Cancel">
                    <input type="submit" class="fadeIn fourth" value="Save">
                }
            </div>
        </div>
            </div>
        </div>
    </div>
