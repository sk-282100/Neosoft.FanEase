@model CreatorRegisteration;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool isInserted = Convert.ToBoolean(ViewData["isInsert"]);
}
<head>
    <link rel="stylesheet" href="~/css/temp.css" />
    <link rel="stylesheet" href="~/css/CreatorRegisteration.css" />
    <script  src="~/js/ContentCreator.js" ></script>
    <style>
        label span {
            font-size: 12px;
        }
    </style>
</head>
<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        @Html.Partial("_SideBar")

        <div class="col pt-2">
            <div class="wrapper">
                <div id="formContent">
                    <!-- Tabs Titles -->
                    <h2 class="active"> ADD Creator </h2>
                    @if (@isInserted)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Data Inserted!</strong> New Content Creator Added Successfully
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <!-- Login Form -->
                    @using (Html.BeginForm("CreatorRegisteration", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-row">
                            <label id="lbl" for="formFileMultiple" class="form-label">Add Profile Image</label>
                            <input class="form-control" type="file" name="ProfilePhotoPath" value="img.jpeg" id="formFileMultiple" />

                            <div class="form-group col-md-6">
                                <label id="lbl" class="form-group required">
                                    Name<sup style="color:red">*</sup>
                                    @Html.ValidationMessage("CreatorName", "", new { @class = "text-danger" })
                                </label>
                                <input asp-for="CreatorName" type="text" class="fadeIn second" name="CreatorName" placeholder="Enter Name">

                                <label id="lbl">
                                    Address1<sup style="color:red">*</sup>
                                    @Html.ValidationMessage("Address1", "", new { @class = "text-danger" })
                                </label>
                                <input asp-for="Address1" type="text" class="fadeIn third" name="Address1" placeholder="Address1">

                                <label id="lbl">Country<sup style="color:red">*</sup></label>
                                <select id="formCity" style="margin:10px 10px 0px 35px" name="CountryId">Country</select>

                                <label id="lbl">
                                    Mobile Number<sup style="color:red">*</sup>
                                    @Html.ValidationMessage("MobileNumber", "", new { @class = "text-danger" })
                                </label>
                                <input asp-for="MobileNumber" type="text" class="fadeIn second" name="MobileNumber" placeholder="Enter mobile number">

                                <label id="lbl">
                                    Status &nbsp;&nbsp;&nbsp;
                                    <input name="Status" type="radio" value=true checked />Active &nbsp;&nbsp;&nbsp;
                                    <input name="Status" type="radio" value=false />Deactive
                                </label>
                            </div>
                            <div class="form-group col-md-6">
                                <label id="lbl">
                                    Email<sup style="color:red">*</sup>
                                    @Html.ValidationMessage("EmailId", "", new { @class = "text-danger" })
                                </label>
                                <input asp-for="EmailId" type="text" class="fadeIn first" name="EmailId" placeholder="Enter Email ID">

                                <label id="lbl">Address2</label>
                                <input type="text" class="fadeIn second" name="Address2" placeholder="Address2"><br />

                                <label id="lbl">Country<sup style="color:red">*</sup></label>
                                <select id="formCountry" style="margin:10px 10px 0px 35px" class="js-example-basic-single" name="Country">
                                   
                                </select>

                                <div style="float:left">
                                    <label id="lbl">Additional remark</label>
                                    <textarea type="text" class="fadeIn third" rows="4" name="AdditionalRemark" placeholder="Additional remark"></textarea>
                                </div>
                                <br /><br />
                            </div>
                        </div>
                        <input type="button" id="btnCancel" onclick="window.location= '@Url.Action( "CreatorsList", "Admin")'" class="fadeIn fourth" value="Cancel">
                        <input type="submit" class="fadeIn fourth" value="Save">
                    }
                </div>
            </div>
        </div>
    </div>
</div>
