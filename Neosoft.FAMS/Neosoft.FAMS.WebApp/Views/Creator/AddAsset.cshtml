@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/eonasdan-bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="~/css/temp.css" />
    <link rel="stylesheet" href="~/css/AddAsset.css" />
    <script>
        if (/Mobi/.test(navigator.userAgent)) {
            // if mobile device, use native pickers
            $(".date input").attr("type", "date");
            $(".time input").attr("type", "time");
        } else {
            // if desktop device, use DateTimePicker
            $("#datepicker").datetimepicker({
                useCurrent: false,
                format: "L",
                showTodayButton: true,
                icons: {
                    next: "fa fa-chevron-right",
                    previous: "fa fa-chevron-left",
                    today: 'todayText',
                }
            });
            $("#timepicker").datetimepicker({
                format: "LT",
                icons: {
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down"
                }
            });
        }

    </script>
</head>
<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav flex-column flex-nowrap overflow-hidden">

                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Creator/Index" id="sidetext" style="color:white"><i class="fa fa-home" style="color:white"></i>  Dashboard</a>

                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/VideoTable" id="sidetext" style="color:white"><i class="bi-camera-video-fill" style="color:white"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white"> Video</span></a></li>

                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/AddCampaignView" id="sidetext" style="color:white"><i class="fas fa-rocket" style="color:white"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Campaigns</span></a></li>
                <li class="nav-item" style="background-color: #F5F5F5; width: 400px;">

                    <a class="nav-link text-truncate" id="sidetext" href="~/Creator/AddAsset" style="background-color: #F5F5F5;width:400px;color:black;"> <i class="bi bi-youtube"></i>   <span class="d-none d-sm-inline" id="sidetext" style="color: black;"> Media</span></a>
                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="#" id="sidetext" style="color:white"><i class="bi bi-ui-checks-grid" style="color:white"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Template</span></a></li>
            </ul>
        </div>
        <div class="col pt-2">
            <div class="wrapper">
                <div id="formContent">
                    <!-- Tabs Titles -->
                    <h1 class="active">ADD ASSET </h1>

                    <!-- Login Form -->
                    @using (Html.BeginForm("Index", "Advertisement", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label id="lbl" class="form-group required">Advertisement Title</label>
                                <input type="text" class="fadeIn second" placeholder="Enter Video Title">
                                <label id="lbl">Content Type</label>
                                <select name="ContentType" id="ContentType">
                                    <option value="Image">Images</option>
                                    <option value="Video">Videos</option>
                                </select>
                                <label id="lbl">Advertisement Description</label>
                                <textarea type="text" rows="6" class="fadeIn second" placeholder="Enter Description"></textarea>
                            </div>
                            <div class="form-group col-md-6">
                                <label id="lbl">Start Time</label>
                                <input type="text" class="fadeIn first" placeholder="HH:MM AM/PM">
                                <label id="lbl">End Time</label>
                                <input type="text" class="fadeIn second" placeholder="HH:MM AM/PM">
                                <label id="lbl">Advertisement Placement</label>
                                <select name="AdvertisementPlacement" id="AdvertisementPlacement">
                                    <option value="Top-Left">Top-Left</option>
                                    <option value="Top-Right">Top-Right</option>
                                    <option value="Bottom-Left">Bottom-Left</option>
                                    <option value="Bottom-Right">Bottom-Right</option>
                                </select>

                                <label id="lbl">Video or Image URL</label>
                                <input type="text" class="fadeIn second" placeholder="Enter Website URL">
                                <label id="lbl" for="formFileMultiple" class="form-label">Add Images or Add Video</label>
                                <input class="form-control" type="file" id="formFileMultiple" multiple />



                            </div>
                        </div>
                        <input type="submit" id="btnCancel" class="fadeIn fourth" value="Cancel">
                        <input type="submit" class="fadeIn fourth" value="Save">
                    }


                </div>
            </div>
        </div>
    </div>
</div>
