@using Neosoft.FAMS.Application.Features.Video.Queries.GetAll;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "VideoList";
    var records = (List<VideoGetAllDto>)ViewData["data"];
}
<head>

    <link rel="stylesheet" href="~/css/temp.css" />
    <link href="~/css/datatablestyle.css" rel="stylesheet" />
    <script src="~/js/AddVideo.js"></script>
    <style>
        #deleteTag:hover {
            color: #56baed;
            cursor: pointer;
        }
    </style>
</head>
<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav flex-column flex-nowrap overflow-hidden">
                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Creator/Index" style="color:black"><i class="fa fa-home" style="color: #52BAF1"></i>  Dashboard</a>
                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/VideoTable" style="background-color: #F5F5F5; width: 400px; color: #52BAF1;"><i class="bi-camera-video-fill" style="color: #52BAF1"></i> <span class="d-none d-sm-inline" style="color:black"> Video</span></a></li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/AddCampaignView" id="sidetext" style="color:black"><i class="fas fa-rocket" style="color: #52BAF1"></i> <span class="d-none d-sm-inline" style="color:black">Campaigns</span></a></li>
                <li class="nav-item" >
                    <a class="nav-link text-truncate" href="~/Creator/AddAsset" style="color:black"> <i class="bi bi-youtube" style="color: #52BAF1"></i>   <span class="d-none d-sm-inline" style="color: black;"> Media</span></a>
                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="#" style="color:black"><i class="bi bi-ui-checks-grid" style="color: #52BAF1"></i> <span class="d-none d-sm-inline" style="color:black">Template</span></a></li>
            </ul>
        </div>

        <div class="col pt-2">
            <h3>Video List</h3>
            <div class="row header">
                <div style="float: right;">
                    <button style="float: right; margin-right: 5px; margin-bottom: 5px; width: 220px; height: 50px; background-color: #C1C0C0; color: white;" type="button" class="btn add-new" onclick="window.location= '@Url.Action( "AddVideoView", "Creator")'"><i class="fa fa-plus"></i> Add New Video</button>
                </div>
            </div>
            <div style="margin-top:20px;">
                <table id="myTable" class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th class="nosort">Thumbnail Image</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Video Title</th>
                            <th class="nosort">Created On</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in records)
                        {
                            <tr>
                                @if (@record.VideoImage != null)
                                {
                                    <td><img src="/Uploads/Creators/Videos/@record.VideoImage" alt="profile" style="height:50px;width:50px;" /></td>
                                }
                                else
                                {
                                    <td><img src="/DefaultPhotos/video-thumbnail-default.png" alt="profile" style="height:50px;width:50px;" /></td>
                                }
                                <td>@record.StartDate.ToString()</td>
                                <td>@record.EndDate.ToString()</td>
                                <td>@record.Title</td>
                                <td>@record.CreatedOn</td>
                                <td>
                                    <a class="edit" href="EditVideoView/@record.VideoId.ToString()" title="Edit" data-toggle="tooltip"><i class="material-icons"></i></a>
                                    <a class="delete" title="Delete" onClick="deleteCreator('DeleteVideo/@record.VideoId.ToString()')" data-toggle="modal" data-target="#exampleModalCenter" data-toggle="tooltip"><i class="material-icons"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body" style="height: 60px;">
                                Are you sure you want to Delete this record?
                            </div>
                            <div class="modal-footer">
                                <a href="VideoTable" class="btn btn-secondary">No</a>
                                <a id="hrefElement" class="btn btn-primary">Yes</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#myTable').dataTable({
                'aoColumnDefs': [{
                        'bSortable': false,
                        'aTargets': ['nosort']
                    }]
            });
            console.log(1);
        });
    </script>
    <script>
        function deleteCreator(hrefLink) {
            console.log(hrefLink);
            var element = document.getElementById("hrefElement");
            console.log(element);
            element.href = hrefLink.toLocaleString();
        }
    </script>
</div>
  