@model AddVideo;
@using Microsoft.AspNetCore.Http
@using Neosoft.FAMS.Application.Features.Video.Queries.GetAll

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isInserted = Convert.ToBoolean(ViewData["isInsert"]);

}
<head>
    <link rel="stylesheet" href="~/css/temp.css" />
    <script src="~/js/AddVideo.js"></script>
    <link rel="stylesheet" href="~/css/StepBar.css" />
    <script src="~/js/StepBar.js"></script>
    <link rel="stylesheet" href="~/css/Creator/Add Video.css" />

</head>



<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav flex-column flex-nowrap overflow-hidden">
                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Creator/Index" style="color:black"><i class="fa fa-home" style="color: #52BAF1"></i>  Dashboard</a>
                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/VideoTable" style="background-color: #F5F5F5; width: 400px; color: #52BAF1;"><i class="bi-camera-video-fill" style="color: #52BAF1"></i> <span class="d-none d-sm-inline" style="color:black"> Video</span></a></li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/AddCampaignView" style="color:white"><i class="fas fa-rocket" style="color: #52BAF1"></i> <span class="d-none d-sm-inline" style="color: black">Campaigns</span></a></li>
                <li class="nav-item">
                    <a class="nav-link text-truncate" id="sidetext" href="~/Creator/AddAsset" style="color:white"> <i class="bi bi-youtube" style="color: #52BAF1"></i>   <span class="d-none d-sm-inline" style="color: black;"> Media</span></a>
                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="#" id="sidetext" style="color:white"><i class="bi bi-ui-checks-grid" style="color: #52BAF1"></i> <span class="d-none d-sm-inline" style="color: black">Template</span></a></li>
            </ul>
        </div>
        <div class="col align-content-end">
            <div id="wrapper">
                <br>
                <span class='baricon'>1</span>
                <span id="bar1" class='progress_bar'></span>
                <span class='baricon'>2</span>
                <span id="bar2" class='progress_bar'></span>
                <span class='baricon'>3</span>
            </div>

            <div class="col pt-2">
                <div class="wrapper">
                    <div id="formContent">
                        <!-- Tabs Titles -->
                        <h1 class="active">ADD Video </h1>

                       @* @if (@isInserted)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>Data Inserted!</strong> Added Successfully
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }*@
                        <!-- Login Form -->
                        @using (Html.BeginForm("AddVideoView", "Creator", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="row">
                                <div class="col">
                                    <label>Video Thumbnail Image :  </label>
                                </div>
                                <div class="col" style="padding-right:57px">
                                    <br />
                                    <input class="form-control" type="file" name="VideoImage" value="img.jpeg" id="videoThumbnail" onchange="readURL(this);" style="width: 300px;" />
                                </div>
                                <div class="col">
                                    <br />
                                    <img id="thumbnail" class="img-thumbnail" src="#" alt="Thumbnail image">
                                </div>

                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Video Title :  @Html.ValidationMessage("Title", "", new { @class = "text-danger" })</label>
                                    <input asp-for="Title" type="text" class="form-control mb-2 mr-sm-2" id="txt_title" name="Title" placeholder="Title">
                                    <br /><br />
                                    <label>Video Description : @Html.ValidationMessage("Decription", "", new { @class = "text-danger" })</label>
                                    <textarea class="form-control mb-2 mr-sm-2" id="txt_desc" placeholder="Description" name="Decription"></textarea>
                                    <div id="temp">
                                        <label>
                                            MP4 Video File
                                            <input type='file' name="UploadVideoPath" id="mp4videoFile" />
                                        </label> <br />
                                    </div>
                                       
                                    </div>
                                    <div class="form-group col-md-6">
                                       
                                        <label id="lbl">
                                            Start Time<sup style="color:red">*</sup>
                                            @Html.ValidationMessage("StartDate", "", new { @class = "text-danger" })
                                        </label>
                                        <input asp-for="StartDate" type="datetime-local" class="fadeIn second" name="StartDate" placeholder="HH:MM AM/PM">
                                        <br /><br />
                                        <label id="lbl">
                                            End Time<sup style="color:red">*</sup>
                                            @Html.ValidationMessage("EndDate", "", new { @class = "text-danger" })
                                        </label>
                                        <input asp-for="EndDate" type="datetime-local" class="fadeIn second" name="EndDate" placeholder="HH:MM AM/PM">
                                        <br /><br /><br />

                                        <label>Video Type</label>
                                        <label class="btn btn-secondary">
                                            <input type="radio" name="VideoTypeId" id="option1" autocomplete="off" onclick="check('option1')" value="1"> Live
                                        </label>
                                        <label class="btn btn-secondary">
                                            <input type="radio" name="VideoTypeId" id="option2" autocomplete="off" onclick="check('option2')" value="2" checked> Pre-Recorded
                                        </label><br /><br /><br />

                                        <label>Select Video Player:  @Html.ValidationMessage("PlayerTypeId", "", new { @class = "text-danger" })</label>
                                        <select class="form-select" aria-label="Default select example" name="PlayerTypeId" id="selectVideo" required>
                                            <option value="1" selected>One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select><br />

                                        <label>MP4 Video URL :  @Html.ValidationMessage("VideoUrl", "", new { @class = "text-danger" })</label>
                                        <input asp-for="VideoUrl" type="text" class="form-control mb-2 mr-sm-2" id="txt_VideoURL" name="VideoUrl" placeholder="Video URL">
                                        <br />
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-secondary" id="btnCancel" onclick="window.location= '@Url.Action( "VideoTable", "Creator")'">Cancel</button>
                                </div>
                                <div class="col-md-6">
                                    <input type="submit" class="btn btn-primary" id="btnProceed" value="Proceed" />
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function check(id) {
        if (document.getElementById(id) === document.getElementById("option1")) {
            document.getElementById("temp").style.display = "none";
            console.log(1);
        }
        else if (document.getElementById(id) === document.getElementById("option2")) {
            document.getElementById("temp").style.display = "block";
            console.log(1);
        }
    }
</script>


