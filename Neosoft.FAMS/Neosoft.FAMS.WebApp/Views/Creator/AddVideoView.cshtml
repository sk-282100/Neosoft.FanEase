@model AddVideo;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isInserted = Convert.ToBoolean(ViewData["isInsert"]);
}
<head>
    <link rel="stylesheet" href="~/css/temp.css" />
    <script src="~/js/AddVideo.js"></script> 
</head>



<div class="container-fluid">

    <div class="row" style="background-color: #F5F5F5;">
        <div class="col-2 collapse show d-md-flex pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav flex-column flex-nowrap overflow-hidden">
                <li class="nav-item">
                    <a class="nav-link text-truncate" href="~/Creator/Index" id="sidetext" style="color:white"><i class="fa fa-home" style="color:white"></i>  Dashboard</a>
                </li>
                <li class="nav-item" style="background-color: #F5F5F5; width: 400px;">
                    <a class="nav-link text-truncate" id="sidetext" href="~/Creator/VideoTable" style="background-color: #F5F5F5;width:400px;color:black;"> <i class="bi bi-camera-video-fill"></i>   <span class="d-none d-sm-inline" id="sidetext" style="color: black;"> Videos</span></a>
                </li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/AddCampaignView" id="sidetext" style="color:white"><i class="fas fa-rocket" style="color:white"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Campaigns</span></a></li>
                <li class="nav-item"><a class="nav-link text-truncate" href="~/Creator/AddAsset" id="sidetext" style="color:white"><i class="bi bi-youtube" style="color:white"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Media</span></a></li>
                <li class="nav-item"><a class="nav-link text-truncate" href="#" id="sidetext" style="color:white"><i class="bi bi-ui-checks-grid" style="color:white"></i> <span class="d-none d-sm-inline" id="sidetext" style="color:white">Template</span></a></li>
            </ul>
        </div>
        <div class="col align-content-end">
            @using (Html.BeginForm("AddVideoView", "Creator", FormMethod.Post, new { enctype = "multipart/form-data" }))
            { 
            <div class="col pt-2">
                <h2>
                    <a href="" data-target="#sidebar" class="d-md-none"><i class="fa fa-bars"></i></a> Add Video
                </h2><br />
                @if (@isInserted)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Data Inserted!</strong> Added Successfully
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                <h6>Video Thumbnail Image :  </h6>
                <img id="thumbnail" class="img-thumbnail" src="#" alt="Thumbnail image">
                <input  class="form-control"  type="file" name="VideoImage" value="img.jpeg" id="videoThumbnail" onchange="readURL(this);" style="width: 300px;"/>
                @*<input type='file' name="" VideoImage" onchange="readURL(this);" />*@
                <br /><br /><br />
                <h6>Video Title :  @Html.ValidationMessage("Title", "", new { @class = "text-danger" })</h6>
                <input asp-for="Title" type="text" class="form-control mb-2 mr-sm-2" id="txt_title" name="Title" placeholder="Title">
                <br /><br />
                <h6>Video Description</h6>
                <textarea class="form-control mb-2 mr-sm-2" id="txt_desc" placeholder="Description"></textarea>
            </div>
            <div class="col pt-2">
                <br /><br /><br />
                <label id="lbl">
                    Start Time<sup style="color:red">*</sup>
                    @Html.ValidationMessage("StartDate", "", new { @class = "text-danger" })
                </label>
                <input asp-for="StartDate" type="datetime-local" class="fadeIn second" name="StartDate" placeholder="HH:MM AM/PM" >
                <br /><br />
                <label id="lbl">
                    End Time<sup style="color:red">*</sup>
                    @Html.ValidationMessage("EndDate", "", new { @class = "text-danger" })
                </label>
                <input asp-for="EndDate" type="datetime-local" class="fadeIn second" name="EndDate" placeholder="HH:MM AM/PM" >
                <br /><br /><br />
                <h6>Video Type</h6>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option1" autocomplete="off" onclick="check(this.id)" value="1"> Live
                </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option2" autocomplete="off" onclick="check(this.id)" value="2" checked> Pre-Recorded
                </label><br /><br /><br />
                <h6>Select Video Player:  @Html.ValidationMessage("videoTypeId", "", new { @class = "text-danger" })</h6>
                <select class="form-select" aria-label="Default select example" name="videoTypeId" id="selectVideo" required>
                    <option value="1" selected>One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select><br />

                <h6>MP4 Video URL :  @Html.ValidationMessage("VideoUrl", "", new { @class = "text-danger" })</h6>
                <input asp-for="VideoUrl" type="text" class="form-control mb-2 mr-sm-2" id="txt_VideoURL" name="VideoUrl" placeholder="Video URL">
                <br />
                <div id="temp">
                    <label id="lbl_mp4videoFile">
                        MP4 Video File
                        <input type='file' name="UploadVideoPath" id="mp4videoFile" />
                    </label>
                    <br />
                </div>
                <button type="button" class="btn btn-secondary" id="btnCancel">Cancel</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="submit" class="btn btn-primary" id="btnProceed" value="Proceed" />
            </div>
            }
            </div>
        </div>
</div>
<script>
    function check(options) {
        if (document.getElementById(options) === document.getElementById("option1")) {
            document.getElementById("temp").style.display = "none";
            console.log(1);
        }
        else if (document.getElementById(options) === document.getElementById("option2")) {
            document.getElementById("temp").style.display = "block";
            console.log(1);
        }
    }
</script>

